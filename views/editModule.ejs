<html>

<body>

    <h1>Update Module</h1>

    <% if (errors !=undefined) { %>
        <ul>
            <% errors.forEach((error)=> { %>
                <li>
                    <%= error.msg %>
                </li>
                <% }) %>
        </ul>
        <% } %>

            <form action="/module/edit/<%= mid %>" method="POST">
                <label>Module ID: </label>
                <input type="text" name="mid" disabled value="<%= mid %>"> <br>
                <label>Module Name: </label>
                <input type="text" name="name" value="<%= name %>"><br>
                <label>Credits: </label>
                <input type="number" name="credits" value="<%= credits %>"><br>
                <input type="submit" value="Update">
            </form>
            <a href="http://localhost:3000/">Home</a> <br>
</body>

</html>